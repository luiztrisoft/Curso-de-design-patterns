//		System.out.println("| +-------+ |");
//		System.out.println("| |Windows| |");
//		System.out.println("| |       | |");
//		System.out.println("| +-------+ |");
//		System.out.println("+-----------+");
//		System.out.println("     | |     ");
//		System.out.println("+-----------+");
//		System.out.println("|   DELL    |");
//		System.out.println("+-----------+");
	}

}
